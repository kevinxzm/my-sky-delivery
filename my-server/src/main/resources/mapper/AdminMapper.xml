<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kevin.mapper.AdminMapper">

    <select id="adminLogin" resultType="com.kevin.entity.Employee">
        <!--        select * from employee where username=#{username} and password=#{password}-->
        select * from employee where username=#{username}
    </select>


    <select id="searchDish" resultType="com.kevin.entity.Dish">
        select * from dish
    </select>
    <select id="searchAllEmp" resultType="com.kevin.entity.Employee">
        select * from employee
    </select>


    <insert id="insertEmp" useGeneratedKeys="true" keyProperty="id">
        insert into employee (name,username,password,phone,sex,id_number) values
        (#{name},#{username},#{password},#{phone},#{sex},#{idNumber})
    </insert>


</mapper>